    </form> -->
    <div id="filters">
        <a href="/listings?category=Trending">
        <div class="filter">
            <div><b><i class="fa-solid fa-fire fire"></i></b>
                <p><b>Trending</b> </p>
            </div>
            
        </div>
        </a>
        <a href="/listings?category=food">
        <div class="filter">
            <div><b></b><i class="fa-solid fa-bowl-food fire"></i>
                <p><b> Food</b></p>
            </div>
        </div>
        </a>
        <a href="/listings?category=Topworld">
        <div class="filter">
            <div><b><i class="fa-solid fa-mountain-city fire"></i></b>
                <p><b>Topworld</b></p>
            </div>
        </div>
        </a>
        <a href="/listings?category=Beachhotels">
        <div class="filter">
            <div><b><i class="fa-solid fa-umbrella-beach fire"></i></b>
                <p><b> Beachhotels</b></p>
            </div>
        </div>
        </a>
        <a href="/listings?category=Snowhotels">
        <div class="filter">
            <div><b><i class="fa-solid fa-snowflake fire"></i></b>
                <p><b>Snowhotels</b></p>
            </div>
        </div>
        </a>
        <a href="/listings?category=Hotels">
        <div class="filter">
            <div><b><i class="fa-solid fa-bed fire"></i></b>
                <p><b>Hotels</b></p>
            </div>
        </div>
        </a>
        <a href="/listings?category=Pool">
        <div class="filter">
            <div><b><i class="fa-solid fa-person-swimming fire"></i></b>
                <p><b>Pool</b></p>
            </div>
        </div>
        </a>
        <a href="/listings?category=Castle">
        <div class="filter">
            <div><b><i class="fa-solid fa-chess-rook fire"></i></i></b>
                <p><b>Castle</b></p>
            </div>
        </div>
        </a>
       <div class="tax-switch">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault"><b>Display total after taxes</b></label>
          </div>
       </div> 
    
    
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings ){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" height="300rem">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                   <b><%= listing.title %></b> 
                    <br>
                    &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night
                    <i class="tax-info">&nbsp;+18% GST</i>
                  </p>
                </div>
                
            
            </div>
        </a>
         <% } %>

    </div>
    <script>
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click",()=>{
           let taxInfo = document.getElementsByClassName("tax-info");
           for(tax of taxInfo){
            if(tax.style.display != "inline"){
                tax.style.display = "inline";
            }else{
                tax.style.display = "none";
            }
           
           }
        });
    </script>
</body>


